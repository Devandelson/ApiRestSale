{
  "compilerOptions": {
    "target": "ESNext", // versión de JS de salida
    "module": "ES2020", // módulo compatible con Node
    "rootDir": "src", // carpeta de entrada
    "outDir": "dist", // carpeta de salida
    "esModuleInterop": true, // compatibilidad con import/export
    "strict": true, // buenas prácticas
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
 "exclude": [
    "node_modules",
  ]
}