{
  "compilerOptions": {
    "target": "ES2020",                // buena compatibilidad
    "module": "NodeNext",              // soporte ESM en Node
    "moduleResolution": "NodeNext",    // resolución de módulos estilo Node
    "moduleDetection": "force",
    "isolatedModules": true,
    "esModuleInterop": true,           // permite importar CJS como ESM
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
